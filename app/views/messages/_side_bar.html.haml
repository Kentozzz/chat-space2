.sidebar
  .sideheader
    %p.sideheader__user-name
      = current_user.name
    %ul.sideheader__icons
      = link_to new_group_path(current_user) do
        = icon('fas', 'edit')
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog')
  .sidegroup
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        %p.sidegroup__user-name
          = group.name
      = link_to "#" do
        %p.sidegroup__content
          = group.show_last_message